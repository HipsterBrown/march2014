extends layout

block content
  h1
    | Game of Thrones Episodes
  p
    form
      input(type='text' name='keyword')
      input(type='button' value='Search')
  p
    a(href='/episodes/new') New Episode

  section.episodes
    dl
      - for episode in episodes
        dt.title
          = episode.title
          a(href='/episodes/#{episode.id}/edit') edit
          a(href='/episodes/#{episode.id}?_method=DELETE'
            onclick='if(!confirm("Are you sure?")) return false;') destroy

        dd.description
          = episode.description
        dd.comments
          ul
          - for comment in episode.comments
            li.comment
              = comment.description
